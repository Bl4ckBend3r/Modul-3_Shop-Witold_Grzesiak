{
  "name": "sklep-next",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "list:products": "ts-node -r dotenv/config scripts/list-products.ts",
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "db:up": "docker compose up -d db",
    "db:wait": "docker compose wait db",
    "db:down": "docker compose down",
    "db:reset": "docker compose down -v && docker compose up -d db && docker compose wait db",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev --name init",
    "prisma:studio": "prisma studio",
    "prisma:seed": "ts-node -r dotenv/config prisma/seed.ts",
    "dev:all": "npm run db:up && npm run db:wait && npm run prisma:generate && npm run prisma:migrate && next dev",
    "upload:images": "node ./scripts/upload.cjs"
  },
  "dependencies": {
    "@prisma/client": "^6.14.0",
    "cloudinary": "^2.7.0",
    "clsx": "^2.1.1",
    "dotenv": "^17.2.1",
    "lucide-react": "^0.540.0",
    "next": "15.4.6",
    "next-cloudinary": "^6.16.0",
    "pg": "^8.16.3",
    "react": "19.1.0",
    "react-dom": "19.1.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4.1.12",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "autoprefixer": "^10.4.21",
    "cross-env": "^10.0.0",
    "eslint": "^9",
    "eslint-config-next": "15.4.6",
    "postcss": "^8.5.6",
    "prisma": "^6.14.0",
    "tailwindcss": "^4.1.12",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  }
}
